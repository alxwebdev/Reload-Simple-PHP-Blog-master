<div class="section-header"><h3>Categories</h3></div>
<?php
$sql = "SELECT * FROM category";
$result = mysqli_query($dbcon, $sql);

if ($result){
    echo "<div class='category-list'>";
    while ($row = mysqli_fetch_assoc($result)) {
        $id = $row['id'];
        $catname = $row['catname'];
        $description = $row['description'];
        ?>

        <div class="category-item">
            <a href="cat.php?id=<?php echo $id; ?>" class="category-link"><?php echo $catname; ?></a>
            <div class="category-desc"><?php echo $description; ?></div>
        </div>
        <?php
    }
    echo "</div>";
}else{
    echo "<div class='alert alert-empty'>No Category found.</div>";
}
